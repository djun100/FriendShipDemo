<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafafa" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/dynamic_item_img_rl"
            android:layout_width="fill_parent"
            android:layout_height="100dip" >

            <ImageView
                android:id="@+id/dynamic_item_img"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="36dip" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="36dip"
                android:layout_marginLeft="13dip"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/dynamic_item_head_img"
                    android:layout_width="30dip"
                    android:layout_height="30dip"
                    android:layout_gravity="center_vertical"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dip"
                    android:textColor="#3c3c3c"
                    android:textSize="16sp" />

         

                <ImageView
                    android:id="@+id/dynamic_item_charm_img"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="36dip"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dip"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="9.24km"
                    android:textColor="#a7a6a8"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dip"
                    android:text="1小时前"
                    android:textColor="#a7a6a8"
                    android:textSize="12sp" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/dynamic_item_content_rl"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="4dip" >

            <RelativeLayout
                android:id="@+id/dynamic_item_content_pic_rl"
                android:layout_width="79dip"
                android:layout_height="70dip"
                android:layout_alignParentRight="true" >

                <ImageView
                    android:id="@+id/dynamic_item_content_pic_img"
                    android:layout_width="70dip"
                    android:layout_height="70dip"
                    android:layout_alignParentRight="true"
                    android:adjustViewBounds="true"
                    android:background="#ffffff"
                    android:scaleType="centerCrop" />
            </RelativeLayout>

            <TextView
                android:id="@+id/dynamic_item_content_tx"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_toLeftOf="@+id/dynamic_item_content_pic_rl"
                android:text="lalalalalalallalalallalalalalallalalaalal"
                android:textColor="#3c3c3c"
                android:textSize="16sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="8dip"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_marginTop="2dip"
                android:layout_width="30dip"
                android:layout_height="20dip" >

                <Button
                    android:layout_width="16dip"
                    android:layout_height="16dip"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/x_yh_dynamic_item_szan1" />
            </RelativeLayout>

            <TextView
                android:id="@+id/dynamic_item_zan_tx"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dip"
                android:text="查看全部次赞"
                android:textColor="#a7a6a8"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="3dip"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_marginTop="5dip"
                android:layout_width="30dip"
                android:layout_height="20dip" >

                <Button
                    android:layout_width="16dip"
                    android:layout_height="16dip"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/x_yh_dynamic_item_scommemt" />
            </RelativeLayout>

            <TextView
                android:id="@+id/dynamic_item_comment_tx"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dip"
                android:text="查看全部评论"
                android:textColor="#a7a6a8"
                android:textSize="16sp" />
        </LinearLayout>

	</LinearLayout>      
</RelativeLayout>